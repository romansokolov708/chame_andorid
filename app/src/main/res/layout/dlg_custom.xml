<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dlg_background"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:text="sdfsdfsdfsdfsdf"
        android:textColor="#FFF"
        android:textSize="@dimen/dialog_title_text_size"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/messageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="sdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdf"
        android:textColor="#FFF"
        android:textSize="@dimen/dialog_content_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnLL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dialog_btn_title_size"
                android:textAllCaps="false"
                android:text="OK" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_btn_title_size"
                android:textAllCaps="false"
                android:text="Cancel"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_btn_height"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_btn_title_size"
                android:textAllCaps="false"
                android:text="Cancel"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLL3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_btn_height"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_btn_title_size"
                android:textAllCaps="false"
                android:text="Cancel"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>