                        android:layout_marginLeft="@dimen/_5sdp"
                        android:focusableInTouchMode="true"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/_8sdp"
