                    </android.support.v7.widget.CardView>

                    <EditText
                        android:id="@+id/merryET"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:focusableInTouchMode="true"
